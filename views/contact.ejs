<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Contact</h2>
      <a href="/contact/add" class="btn btn-primary mt-3">Add Contact</a>

      <% if (msg.length !== 0) { %>
      <div class="alert alert-success mt-3" role="alert"><%= msg %></div>
      <% } %>

      <table class="table mt-3">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">No Hp</th>
            <th scope="col">Detail</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger" role="alert">
                Data contact masih kosong
              </div>
            </td>
          </tr>
          <% } %> <% contacts.forEach((contact,i) => { i++%>
          <tr>
            <th scope="row"><%= i++ %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.nohp %></td>
            <td>
              <a
                href="/contact/<%= contact.nama %> "
                class="btn badge rounded-pill btn-success"
                >Detail</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
